@model NCS.Prueba.Models.Entities.Cliente

@{
    ViewData["Title"] = "Alta de Cliente";
}

<h2 class="display-6 mb-3">Alta de Nuevo Cliente</h2>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-floating mb-3">
                <input asp-for="CodigoCliente" class="form-control" placeholder="" autocomplete="off" />
                <label asp-for="CodigoCliente"></label>
                <span asp-validation-for="CodigoCliente" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Nombre" class="form-control" placeholder="" autocomplete="off" />
                <label asp-for="Nombre"></label>
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="NIF" class="form-control" placeholder="" autocomplete="off" />
                <label asp-for="NIF"></label>
                <span asp-validation-for="NIF" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Domicilio" class="form-control" placeholder="" autocomplete="off" />
                <label asp-for="Domicilio"></label>
                <span asp-validation-for="Domicilio" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Poblacion" class="form-control" placeholder="" autocomplete="off" />
                <label asp-for="Poblacion"></label>
                <span asp-validation-for="Poblacion" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="CodigoPostal" class="form-control" placeholder="" autocomplete="off" />
                <label asp-for="CodigoPostal"></label>
                <span asp-validation-for="CodigoPostal" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Provincia" class="form-control" placeholder="" autocomplete="off" />
                <label asp-for="Provincia"></label>
                <span asp-validation-for="Provincia" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Pais" class="form-control" placeholder="" autocomplete="off" />
                <label asp-for="Pais"></label>
                <span asp-validation-for="Pais" class="text-danger"></span>
            </div>

            <div class="form-group mt-4 d-flex gap-1 flex-column d-sm-block">
                <input type="submit" value="Crear Cliente" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancelar y Volver</a>
            </div>

            <input type="hidden" asp-for="FechaAlta" />
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}