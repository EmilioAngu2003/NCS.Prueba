@model NCS.Prueba.Models.Entities.Cliente

@{
    ViewData["Title"] = "Eliminar Cliente";
}

<h2 class="display-6 mb-3">Eliminar Cliente</h2>
<hr />

<div>
    <dl class="row">

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.CodigoCliente)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.CodigoCliente)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Nombre)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Nombre)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.NIF)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.NIF)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Domicilio)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Domicilio)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Poblacion)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Poblacion)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.CodigoPostal)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.CodigoPostal)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Provincia)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Provincia)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Pais)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Pais)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.FechaAlta)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.FechaAlta)</dd>

    </dl>
</div>

<div class="card border-danger my-3" role="alert">
    <div class="card-body">
        <h4 class="card-title text-danger">
            <strong>¡Advertencia!</strong>
        </h4>
        <p class="card-text">
            Esta acción es <strong>irreversible</strong>. ¿Está seguro de que desea eliminar este cliente?
        </p>
    </div>
</div>


<form asp-action="Delete">

    <input type="hidden" asp-for="ID" />

    <div class="form-group d-flex gap-1 flex-column d-sm-block">
        <input type="submit" value="Confirmar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancelar y volver al listado</a>
    </div>
</form>