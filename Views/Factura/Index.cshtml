@using NCS.Prueba.Models.Entities
@model IEnumerable<Factura>

@{
    ViewData["Title"] = ViewBag.Titulo;
}

<h2 class="display-6 mb-3">@ViewBag.Titulo</h2>
<hr />

<a asp-action="Create" class="btn btn-primary">
    <i class="bi bi-plus-lg"></i>  Nueva Factura
</a>

<div class="table-responsive">
    <table class="table table-hover my-4">
        <thead>
            <tr class="table-secondary text-nowrap">
                <th>Nº de Factura</th>
                <th>Fecha</th>
                <th>Cliente</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.NumeroFactura)</td>
                    <td>@Html.DisplayFor(modelItem => item.Fecha)</td>
                    <td>@(item.Cliente?.Nombre ?? "Cliente Desconocido")</td>
                    <td>
                        <div class="btn-group">
                            <a asp-action="Edit" asp-route-id="@item.NumeroFactura" class="btn btn-sm btn-outline-secondary">
                                <i class="bi bi-pencil-square"></i>
                                <span class="d-none d-md-inline">Editar</span>
                            </a>
                            <a asp-action="Details" asp-route-id="@item.NumeroFactura" class="btn btn-sm btn-outline-info">
                                <i class="bi bi-info-circle"></i>
                                <span class="d-none d-md-inline">Detalles</span>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.NumeroFactura" class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-trash"></i>
                                <span class="d-none d-md-inline">Borrar</span>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>