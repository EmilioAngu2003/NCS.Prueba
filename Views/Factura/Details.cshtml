@model NCS.Prueba.Models.Entities.Factura

@{
    ViewData["Title"] = $"Factura N° {Model?.NumeroFactura}";
}

<h1>Detalle de Factura N° @Model?.NumeroFactura</h1>
<hr />

<h3>Datos Generales</h3>
<div class="row mb-4">
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-4">Número Factura:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.NumeroFactura)</dd>

            <dt class="col-sm-4">Cliente:</dt>
            <dd class="col-sm-8">@Model.Cliente?.Nombre</dd>

            <dt class="col-sm-4">NIF:</dt>
            <dd class="col-sm-8">@Model.Cliente?.NIF</dd>
        </dl>
    </div>
    <div class="col-md-6">
        <dl class="row">

            <dt class="col-sm-4">Fecha:</dt>
            <dd class="col-sm-8">@Model.Fecha.ToShortDateString()</dd>

            <dt class="col-sm-4">Domicilio:</dt>
            <dd class="col-sm-8">@Model.Cliente.Domicilio, @Model.Cliente.Poblacion</dd>

            <dt class="col-sm-4">Cód. Postal:</dt>
            <dd class="col-sm-8">@Model.Cliente.CodigoPostal (@Model.Cliente.Provincia)</dd>
        </dl>
    </div>
</div>

<hr />

<h3>Líneas de Factura</h3>

<table class="table table-bordered table-sm table-responsive">
    <thead class="table-secondary text-nowrap">
        <tr>
            <th>Concepto</th>
            <th class="text-end">Unidades</th>
            <th class="text-end">Precio (€)</th>
            <th class="text-end">Importe (€)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var linea in Model.FacturaLineas)
        {
            <tr>
                <td>@linea.Concepto</td>
                <td class="text-end">@linea.Unidades</td>
                <td class="text-end">@linea.Precio.ToString("N2")</td>
                <td class="text-end">@linea.Importe.ToString("N2")</td>
            </tr>
        }
        <tr class="table-secondary">
            <td colspan="3" class="text-end"><strong>TOTAL FACTURA</strong></td>
            <td class="text-end"><strong>@Model.Total.ToString("N2") €</strong></td>
        </tr>
    </tbody>
</table>

<hr />

<div class="d-flex gap-1 flex-column d-sm-block">
    <a asp-action="Edit" asp-route-id="@Model?.NumeroFactura" class="btn btn-primary">Modificar Factura</a>
    <a asp-action="Index" class="btn btn-secondary">Volver al Listado</a>
    <a asp-action="Print" asp-route-id="@Model.NumeroFactura" target="_blank" class="btn btn-primary float-end">
        <i class="bi bi-printer"></i>
        Imprimir Factura
    </a>
</div>