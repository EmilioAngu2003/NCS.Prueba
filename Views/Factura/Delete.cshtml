@model NCS.Prueba.Models.Entities.Factura

@{
    ViewData["Title"] = ViewBag.Titulo;
}

<h2 class="display-6 mb-3">@ViewBag.Titulo</h2>
<hr />

<div>
    <dl class="row">
        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.NumeroFactura):</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.NumeroFactura)</dd>

        <dt class="col-sm-4">Fecha:</dt>
        <dd class="col-sm-8">@Model.Fecha.ToShortDateString()</dd>

        <dt class="col-sm-4">Cliente:</dt>
        <dd class="col-sm-8">@Model.Cliente?.Nombre (@Model.Cliente?.NIF)</dd>

        <dt class="col-sm-4">Total:</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Total) €</dd>
    </dl>
</div>

<div class="card border-danger my-3" role="alert">
    <div class="card-body">
        <h4 class="card-title text-danger">
            <strong>¡Advertencia!</strong>
        </h4>
        <p class="card-text">
            Esta acción es <strong>irreversible</strong>. ¿Está seguro de que desea eliminar la Factura N° @Model.NumeroFactura?
        </p>
    </div>
</div>

<form asp-action="Delete" asp-route-id="@Model.NumeroFactura">
    @Html.AntiForgeryToken()
    <div class="form-group d-flex gap-1 flex-column d-sm-block">
        <input type="submit" value="Confirmar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancelar y Volver al Listado</a>
    </div>
</form>